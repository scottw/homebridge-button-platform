{
  "name": "homebridge-button-platform-22",
  "displayName": "Button Platform",
  "version": "2.0.0",
  "description": "A Homebridge platform plugin (for Node v22+) to create virtual buttons that respond to HTTP requests from things like Shelley, Flic or an Elgato Stream Deck",
  "license": "Apache-2.0",
  "keywords": [
    "homebridge-plugin",
    "button",
    "shelley",
    "flic",
    "stream deck",
    "virtual button",
    "http"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scottw/homebridge-button-platform.git"
  },
  "bugs": {
    "url": "https://github.com/scottw/homebridge-button-platform/issues"
  },
  "homepage": "https://github.com/scottw/homebridge-button-platform#readme",
  "engines": {
    "node": "^18.20.0 || ^20.9.0 || ^22.0.0",
    "homebridge": "^1.8.0 || ^2.0.0-beta.0"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "config.schema.json"
  ],
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.0",
    "eslint": "^9.0.0",
    "homebridge": "^2.0.0-beta.0",
    "nodemon": "^3.1.0",
    "rimraf": "^6.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0"
  }
}
